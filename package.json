{
  "name": "carbonfooter",
  "version": "0.19.0",
  "description": "Measure the carbon emissions of your website right inside WordPress",
  "main": "build/index.js",
  "scripts": {
    "build": "wp-scripts build",
    "dev": "wp-scripts start",
    "format": "wp-scripts format",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "test": "wp-scripts test-unit-js",
    "test:watch": "wp-scripts test-unit-js --watch",
    "test:coverage": "wp-scripts test-unit-js --coverage",
    "test:update": "wp-scripts test-unit-js --updateSnapshot",
    "packages-update": "wp-scripts packages-update",
    "version-up": "bun scripts/bump-version.js",
    "release": "bun run build && bun scripts/release.js",
    "i18n:json": "wp i18n make-json languages --no-purge",
    "i18n:merge": "node scripts/merge-i18n.js",
    "i18n:copy": "cp -v languages/carbonfooter-nl_NL-carbonfooter-admin.json ../languages/plugins/carbonfooter-nl_NL-carbonfooter-admin.json",
    "i18n:all": "bun run build && wp i18n make-json languages --no-purge && node scripts/merge-i18n.js && cp -v languages/carbonfooter-nl_NL-carbonfooter-admin.json ../languages/plugins/carbonfooter-nl_NL-carbonfooter-admin.json"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/bun": "latest",
    "@wordpress/jest-console": "^7.0.0",
    "@wordpress/scripts": "^26.0.0"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.0.0",
    "@wordpress/components": "^25.0.0",
    "@wordpress/element": "^5.0.0",
    "@wordpress/i18n": "^4.0.0",
    "@wordpress/icons": "^10.26.0",
    "@wordpress/notices": "^4.0.0"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}